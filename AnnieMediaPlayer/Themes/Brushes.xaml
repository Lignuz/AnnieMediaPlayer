<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Static Brushes -->
    <SolidColorBrush x:Key="LightTitleTextBrush" Color="{DynamicResource LightTitleTextColor}"/>
    
    <!-- Dynamic Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{DynamicResource LightBackgroundColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{DynamicResource LightBorderColor}"/>
    <SolidColorBrush x:Key="TitleTextBrush" Color="{DynamicResource LightTitleTextColor}"/>
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="{DynamicResource LightButtonBackgroundColor}"/>
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="{DynamicResource LightButtonBorderColor}"/>
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="{DynamicResource LightButtonHoverColor}"/>
    <SolidColorBrush x:Key="ButtonPressedBrush" Color="{DynamicResource LightButtonPressedColor}"/>
    <SolidColorBrush x:Key="ButtonDisabledBackgroundBrush" Color="{DynamicResource LightButtonDisabledBackgroundColor}"/>
    <SolidColorBrush x:Key="ButtonDisabledBorderBrush" Color="{DynamicResource LightButtonDisabledBorderColor}"/>
    <SolidColorBrush x:Key="ButtonDisabledForegroundBrush" Color="{DynamicResource LightButtonDisabledForegroundColor}"/>
    <SolidColorBrush x:Key="ThemeButtonFillBrush" Color="{DynamicResource LightThemeButtonFillColor}"/>
    <SolidColorBrush x:Key="CloseButtonHoverBrush" Color="{DynamicResource LightCloseButtonHoverColor}"/>
    <SolidColorBrush x:Key="CloseButtonPressedBrush" Color="{DynamicResource LightCloseButtonPressedColor}"/>
    <SolidColorBrush x:Key="SliderBarBrush" Color="{DynamicResource LightSliderBarColor}"/>
    <SolidColorBrush x:Key="ThumbBrush" Color="{DynamicResource LightThumbColor}"/>
    <SolidColorBrush x:Key="ThumbHoverBrush" Color="{DynamicResource LightThumbHoverColor}"/>
    <SolidColorBrush x:Key="ThumbDraggingBrush" Color="{DynamicResource LightThumbDraggingColor}"/>
    <SolidColorBrush x:Key="ThumbDisabledBrush" Color="{DynamicResource LightThumbDisabledColor}"/>
    <SolidColorBrush x:Key="VideoBackgroundBrush" Color="{DynamicResource LightVideoBackgroundColor}"/>
    <SolidColorBrush x:Key="InactiveBorderBrush" Color="{DynamicResource LightInactiveBorderColor}"/>

    <SolidColorBrush x:Key="DataGridBackgroundBrush" Color="{DynamicResource LightDataGridBackgroundColor}"/>
    <SolidColorBrush x:Key="DataGridForegroundBrush" Color="{DynamicResource LightDataGridForegroundColor}"/>
    <SolidColorBrush x:Key="DataGridBorderBrush" Color="{DynamicResource LightDataGridBorderColor}"/>
    <SolidColorBrush x:Key="DataGridRowBackgroundBrush" Color="{DynamicResource LightDataGridRowBackgroundColor}"/>
    <SolidColorBrush x:Key="DataGridAlternatingRowBackgroundBrush" Color="{DynamicResource LightDataGridAlternatingRowBackgroundColor}"/>
    <SolidColorBrush x:Key="DataGridGridLineBrush" Color="{DynamicResource LightDataGridGridLineColor}"/>
    <SolidColorBrush x:Key="DataGridHeaderBackgroundBrush" Color="{DynamicResource LightDataGridHeaderBackgroundColor}"/>
    <SolidColorBrush x:Key="DataGridHeaderForegroundBrush" Color="{DynamicResource LightDataGridHeaderForegroundColor}"/>
    <SolidColorBrush x:Key="DataGridHeaderBorderBrush" Color="{DynamicResource LightDataGridHeaderBorderColor}"/>
    <SolidColorBrush x:Key="DataGridSelectionBackgroundBrush" Color="{DynamicResource LightDataGridSelectionBackgroundColor}"/>
    <SolidColorBrush x:Key="DataGridSelectionForegroundBrush" Color="{DynamicResource LightDataGridSelectionForegroundColor}"/>
    <SolidColorBrush x:Key="DataGridMouseOverBackgroundBrush" Color="{DynamicResource LightDataGridMouseOverBackgroundColor}"/>
    <SolidColorBrush x:Key="DataGridMouseOverForegroundBrush" Color="{DynamicResource LightDataGridMouseOverForegroundColor}"/>

</ResourceDictionary>